@using BookWormProject.Utils.Helper
@model BookWormProject.Models.User
@{
    var currentUser = Model;
}
<div class="user-page clearfix">
    <h1 class="postname">
        Thông tin chung
    </h1>
    <div class="row">
        <div class="col-xs-12 col-md-6">
            <div class="account-info clearfix">
                <h2 class="posttitle">
                    Thông tin tài khoản
                </h2>
                <div class="info-detail">
                    <div class="group">
                        <div class="label">Họ và tên</div>
                        <div class="detail">
                            @currentUser.Name
                        </div>
                    </div>
                    <div class="group">
                        <div class="label">Email</div>
                        <div class="detail">
                            @currentUser.Email
                        </div>
                    </div>
                    <div class="group">
                        <div class="label">Giới tính</div>
                        <div class="detail">
                            @(currentUser.Gender == false ? "Nam" : "Nữ")
                        </div>
                    </div>

                    <div class="group">
                        <div class="label">Ngày sinh</div>
                        <div class="detail">
                            @DateTimeHelper.ToDateString(currentUser.DateOfBirth)
                        </div>
                    </div>

                    @if (currentUser.PhoneNumber.Length != 0)
                    {
                        <div class="group">
                            <div class="label">Số điện thoại</div>
                            <div class="detail">
                                @currentUser.PhoneNumber
                            </div>
                        </div>
                    }

                    @if (currentUser.Address.Length != 0)
                    {
                        <div class="group">
                            <div class="label">Địa chỉ</div>
                            <div class="detail">
                                @currentUser.Address
                            </div>
                        </div>
                    }

                    @if (currentUser.Description.Length != 0)
                    {
                        <div class="group">
                            <div class="label">Giới thiệu</div>
                            <div class="detail">
                                @currentUser.Description
                            </div>
                        </div>
                    }

                    <div class="group">
                        <div class="label">Vai trò</div>
                        <div class="detail">
                            @if (currentUser.Role == 1)
                            {
                                <span style="color:red">Administrator</span>
                            }
                            else if (currentUser.Role == 0)
                            {
                                <span style="color:blue">User</span>

                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>