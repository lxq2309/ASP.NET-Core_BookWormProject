@using BookWormProject.Utils.Helper
@model BookWormProject.ViewModels.User.UserGeneralInfoViewModel
@{
    var currentUser = Model.CurrentUser;
    var bookmarks = Model.Bookmarks;
    var comments = Model.CommentsForCurrentUser;
    var isMyAccount = Model.IsMyAccount;
}

<div class="user-page clearfix">
    <h1 class="postname">
        Thông tin chung
    </h1>
    <div class="row">
        <div class="col-xs-12 col-md-6">
            <div class="account-info clearfix">
                <h2 class="posttitle">
                    Thông tin tài khoản
                </h2>
                <div class="info-detail">
                    <div class="group">
                        <div class="label">Họ và tên</div>
                        <div class="detail">
                            @currentUser.Name
                        </div>
                    </div>
                    <div class="group">
                        <div class="label">Email</div>
                        <div class="detail">
                            @currentUser.Email
                        </div>
                    </div>
                    <div class="group">
                        <div class="label">Giới tính</div>
                        <div class="detail">
                            @(currentUser.Gender == false ? "Nam" : "Nữ")
                        </div>
                    </div>

                    <div class="group">
                        <div class="label">Ngày sinh</div>
                        <div class="detail">
                            @DateTimeHelper.ToDateString(currentUser.DateOfBirth)
                        </div>
                    </div>

                    @if (currentUser.PhoneNumber.Length != 0)
                    {
                        <div class="group">
                            <div class="label">Số điện thoại</div>
                            <div class="detail">
                                @currentUser.PhoneNumber
                            </div>
                        </div>
                    }

                    @if (currentUser.Address.Length != 0)
                    {
                        <div class="group">
                            <div class="label">Địa chỉ</div>
                            <div class="detail">
                                @currentUser.Address
                            </div>
                        </div>
                    }

                    @if (currentUser.Description.Length != 0)
                    {
                        <div class="group">
                            <div class="label">Giới thiệu</div>
                            <div class="detail">
                                @currentUser.Description
                            </div>
                        </div>
                    }

                    <div class="group">
                        <div class="label">Vai trò</div>
                        <div class="detail">
                            @if (currentUser.Role == 1)
                            {
                                <span style="color:red">Administrator</span>
                            }
                            else if (currentUser.Role == 0)
                            {
                                <span style="color:blue">User</span>

                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xs-12" id="bookmarks">
            <div class="relative">
                <h2 class="posttitle">Bookmark mới nhất</h2>
            </div>
            <section class="comics-followed comics-followed-nopaging user-table clearfix">
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>
                                </th>
                                <th class="nowrap">Tên bài viết</th>
                                <th class="nowrap">Chap mới nhất</th>
                                <th class="nowrap">Tên bookmark</th>
                                <th class="nowrap">Description</th>

                            </tr>
                        </thead>
                        <tbody>
                            @if (bookmarks.Count == 0)
                            {
                                <tr>
                                    <td>Chưa có bookmark nào</td>
                                </tr>
                            }
                            @foreach (var bookmark in bookmarks)
                            {
                                <tr>
                                    <td>
                                        <a class="image" href="/p/@bookmark.ArticleId">
                                            <img src="@bookmark.ArticleCoverImage" class="lazy" data-original="@bookmark.ArticleCoverImage" alt="@bookmark.ArticleTitle">
                                        </a>
                                    </td>
                                    <td>
                                        <a class="comic-name" href="/p/@bookmark.ArticleId">@bookmark.ArticleTitle</a>
                                        @if (isMyAccount)
                                        {
                                            <div class="follow-action">
                                                <a href="javascript:void(0)" class="follow-link" data-bookmark-id="@bookmark.BookmarkId">
                                                    <i class="fa fa-times"></i> Xoá
                                                </a>
                                            </div>
                                        }

                                    </td>
                                    <td class="nowrap chapter">
                                        @if (bookmark.NewestChapter == null)
                                        {
                                            <a href="#">Chưa có chương nào</a>
                                        }
                                        else
                                        {
                                            <a href="/p/@bookmark.ArticleId/@bookmark.NewestChapter.ChapterId" title="@bookmark.NewestChapter.Title">@bookmark.NewestChapter.Title</a>
                                        }
                                        <br>
                                        <time class="time">@bookmark.ArticleUpdatedTimeAgo</time>
                                    </td>
                                    <td class="nowrap chapter">
                                        <a class="comic-name" href="/">@bookmark.BookmarkName</a>
                                    </td>
                                    <td class="nowrap chapter">
                                        <time class="time">@bookmark.BookmarkDescription</time>
                                    </td>

                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </section>
        </div>


        <div class="col-xs-12" id="comments">
            <div class="relative">
                <h2 class="posttitle">Bình luận gần đây</h2>
            </div>
            <section class="user-table clearfix">
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th></th>
                                <th class="nowrap">Tên truyện</th>
                                <th class="nowrap">Thời gian bình luận</th>
                                <th class="nowrap">Nội dung</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (bookmarks.Count == 0)
                            {
                                <tr>
                                    <td>Chưa có bình luận nào</td>
                                </tr>
                            }
                            @foreach (var comment in comments)
                            {
                                <tr>
                                    <td>
                                        <a class="image" href="/p/@comment.ArticleId">
                                            <img src="@comment.ArticleCoverImage" class="lazy" data-original="@comment.ArticleCoverImage" alt="@comment.ArticleTitle">
                                        </a>
                                    </td>
                                    <td>
                                        <a class="comic-name" href="/p/@comment.ArticleId">@comment.ArticleTitle</a>
                                        @if (isMyAccount)
                                        {
                                            <div class="follow-action">
                                                <a href="javascript:void(0)" class="follow-link" data-comment-id="@comment.CommentId">
                                                    <i class="fa fa-times">
                                                    </i> Xoá
                                                </a>
                                            </div>
                                        }
                                    </td>
                                    <td class="nowrap chapter">
                                        <time class="time">@comment.TimeAgo</time>
                                    </td>
                                    <td class="nowrap chapter">
                                        <time class="time">@comment.Content</time>
                                    </td>

                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </section>
        </div>
    </div>
</div>

<script>
    $(function () {
        $('#bookmarks .follow-link').click(function () {
            var bookmarkId = $(this).data('bookmark-id');
            $.ajax({
                url: '/api/Bookmark/Delete/?bookmarkId=' + bookmarkId,
                type: 'DELETE',
                success: function (result) {
                    if (result) {
                        alert("Xoá bookmark thành công");
                        loadGeneralInfo();
                    } else {
                        // Không tìm thấy Bookmark
                    }
                },
                error: function (xhr, status, error) {
                    console.log(xhr.responseText);
                }
            });
        });
    });

    $(function () {
        $('#comments .follow-link').click(function () {
            var commentId = $(this).data('comment-id');
            $.ajax({
                url: '/api/Comment/Delete/?commentId=' + commentId,
                type: 'DELETE',
                success: function (result) {
                    if (result) {
                        alert("Xoá comment thành công");
                        loadGeneralInfo();
                    } else {
                        // Không tìm thấy Comment
                    }
                },
                error: function (xhr, status, error) {
                    console.log(xhr.responseText);
                }
            });
        });
    });
</script>