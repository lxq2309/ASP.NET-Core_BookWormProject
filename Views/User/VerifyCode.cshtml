@model BookWormProject.ViewModels.User.VerifyCodeViewModel
@{
    ViewBag.Title = "Xác thực mã";
    Layout = "_LayoutBookWorm";
}

<div id="login-signup-form">
    <div class="row">
        <div class="col-sm-offset-3 col-sm-6">
            @if (!ViewData.ModelState.IsValid)
            {
                <div class="alert alert-danger">
                    @foreach (var error in ViewData.ModelState.Values.SelectMany(x => x.Errors))
                    {
                        <p>@error.ErrorMessage</p>
                    }
                </div>
            }
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Xác thực mã</h3>
                </div>
                <div class="panel-body">
                    <h2>Vui lòng nhập mã đã được gửi tới email của bạn:</h2>
                    @using (Html.BeginForm("VerifyCode", "User", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        <div class="form-group">
                            <label class="col-sm-3 control-label">Mã xác nhận: </label>
                            <div class="col-sm-9">
                                @Html.TextBoxFor(m => m.Code, new { @class = "form-control", autocomplete = "off", autofocus = "autofocus" })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-offset-3 col-sm-9">
                                <button type="submit" class="btn btn-primary">Xác thực</button>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>