@switch (ViewBag.CurrentController)
{
    case "Article":
        @await Html.PartialAsync("_PartialArticleSidebar.cshtml")
        break;
    case "Home":
        @await Html.PartialAsync("_PartialHomeSidebar.cshtml", (List<Genre>)ViewBag.AllGenres)
        break;
    case "Genre":
        @await Html.PartialAsync("_PartialGenreSidebar.cshtml", (Genre)ViewBag.CurrentGenre)
        break;
    case "Author":
        @await Html.PartialAsync("_PartialAuthorSidebar.cshtml", (Author)ViewBag.CurrentAuthor)
        break;
    default:
        // Nếu không phù hợp với bất kỳ trường hợp nào trên, thực hiện hành động mặc định
        break;
}