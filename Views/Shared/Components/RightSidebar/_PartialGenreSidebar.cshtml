@model BookWormProject.Views.Shared.Components.RightSidebar.ViewModels.GenreCategoriesViewModel
@{
    var currentGenre = Model.CurrentGenre;
    var categories = Model.Categories;
}
<div class="visible-md-block visible-lg-block text-center">
    <div class="panel cat-desc text-left">

        <div class="panel-body">
            @currentGenre.Description
        </div>
    </div>
</div>

<div class="list list-truyen list-cat col-xs-12">
    <div class="title-list">
        <h4>Danh mục của @currentGenre.Name</h4>
    </div>
    <div class="row">
        @foreach (var item in categories)
        {
            <div class="col-xs-6"><a href="#" title="@item.Name">@item.Name</a></div>
        }
    </div>
</div>