@model BookWormProject.ViewModels.Category.CategoryCreateEditViewModel
@{
    ViewData["Title"] = "Sửa danh mục " + Model.Name;
    Layout = "_LayoutAdmin";
}

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">@ViewData["Title"]</h3>
            </div>
            <div class="card-body">
                <form asp-controller="Category" asp-action="Edit" method="post" enctype="multipart/form-data">
                    <div class="form-group">
                        <label for="name">Tên danh mục</label>
                        <input type="text" class="form-control" name="Name" value="@Model.Name" required>
                    </div>
                    <div class="form-group">
                        <label for="link">Đường dẫn</label>
                        <input type="text" class="form-control" name="Link" value="@Model.Link" required>
                    </div>
                    <div class="form-group">
                        <label for="description">Mô tả</label>
                        <textarea class="form-control" name="Description">@Model.Description</textarea>
                    </div>

                    <input type="hidden" asp-for="CategoryId" value="@Model.CategoryId" />
                    <button type="submit" class="btn btn-primary">Sửa</button>
                </form>
            </div>
        </div>
    </div>
</div>