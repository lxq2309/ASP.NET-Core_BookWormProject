@model BookWormProject.ViewModels.Chapter.ChapterCreateEditViewModel
@{
    ViewData["Title"] = "Create chapter";
    Layout = "_LayoutAdmin";
}
@{
    var article = (Article)ViewBag.Article;
}

<!-- include libraries(jQuery, bootstrap) -->
<link href="https://stackpath.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css" rel="stylesheet">
<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>

<!-- include summernote css/js -->
<link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote.min.js"></script>

<div class="row">
    <div class="col-md-12">
        <ol class="breadcrumb float-sm-left">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item"><a href="/admin/article">Article</a></li>
            <li class="breadcrumb-item"><a href="/admin/chapter?articleId=@article.ArticleId">@article.Title</a></li>
            <li class="breadcrumb-item active">@ViewData["Title"]</li>
        </ol>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <div class="card card-primary">
            <div class="card-header">
                <h3 class="card-title">Create chapter</h3>
            </div>
            <!-- /.card-header -->
            <!-- form start -->
            <form asp-controller="Chapter" asp-action="Create" role="form" method="post">
                <div class="card-body">
                    <div class="form-group">
                        <label for="Title">Title</label>
                        <input type="text" class="form-control" id="Title" name="Title" placeholder="Nhập tiêu đề chương" required>
                    </div>
                    <div class="form-group">
                        <label for="Content">Content</label>
                        <textarea id="Content" name="Content" class="form-control" required></textarea>
                    </div>
                    <div class="form-group">
                        <label for="Index">Index</label>
                        <input type="number" class="form-control" id="Index" name="Index" value="@Model.Index" required>
                    </div>
                </div>
                <!-- /.card-body -->

                <div class="card-footer">
                    <input type="hidden" name="ArticleId" value="@article.ArticleId" />
                    <button type="submit" class="btn btn-primary">Add</button>
                </div>
            </form>
        </div>

    </div>
</div>


<script>
    $(document).ready(function () {
        $('#Content').summernote({
            height: 300, // chiều cao của trình soạn thảo
            toolbar: [ // các công cụ của trình soạn thảo
                ['style', ['bold', 'italic', 'underline', 'clear']],
                ['font', ['strikethrough', 'superscript', 'subscript']],
                ['fontsize', ['fontsize']],
                ['color', ['color']],
                ['para', ['ul', 'ol', 'paragraph']],
                ['height', ['height']]
            ]
        });
    });


</script>
